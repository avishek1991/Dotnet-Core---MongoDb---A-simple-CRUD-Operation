@model UserModel
@*Creat Employe*@

<div class="col-12">
    <h3 class="text-center text-info my-2">CREATE USER</h3>
    <form enctype="multipart/form-data" method="post">

        <div class="row m-2 justify-content-center">
            <div class="col-6 p-0">
                <lable>Name </lable>
                <input asp-for="Name" class="w-100  form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>


        <div class="row m-2 justify-content-center">
            <div class="col-6 p-0">
                <lable>City </lable>
                <input asp-for="City" class="w-100  form-control" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
        </div>


        <div class="row m-2 justify-content-center">
            <div class="col-6 p-0">
                <lable>Email</lable>
                <input asp-for="Email" class="w-100  form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>
        <div class="row m-2 justify-content-center">
            <div class="col-6 p-0">               
                <button type="submit" class="btn btn-primary my-2">Update</button>
                <a type="submit" asp-action="Index" class="btn btn-primary">Cancel</a>
            </div>
        </div>




        <div asp-validation-summary="All"></div>
    </form>
</div>

